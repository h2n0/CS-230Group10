<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs230.application.FineController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
         <children>
            <Label alignment="BASELINE_LEFT" contentDisplay="CENTER" text="Search for student :">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="studentBox"/>
            <Button mnemonicParsing="false" text="Search" onAction="#handleSearchButton"/>
            <Button mnemonicParsing="false" text="Cancel" onAction="#handleCancelButton"/>
         </children>
      </HBox>
      <TableView editable="true" prefHeight="200.0" prefWidth="200.0" fx:id="tableView">
        <columns>
          <TableColumn prefWidth="75.0" text="UserName" fx:id="UserName"/>
          <TableColumn prefWidth="75.0" text="Amount" fx:id="Amount"/>
        </columns>
      </TableView>
   </children>
</VBox>
