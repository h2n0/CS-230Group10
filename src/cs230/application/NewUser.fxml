<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootVBox" prefHeight="541.0" prefWidth="1296.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs230.application.NewUserController">
   <children>
      <Button fx:id="switchToUser" mnemonicParsing="false" onAction="#handleSwitchUser" text="Switch To User" />
      <Button fx:id="switchToLibrarian" mnemonicParsing="false" onAction="#handleSwitchLibrarian" text="Switch To Librarian" />
      <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveButton" text="Save" />
      <Label fx:id="incorrectDetails" text="Incorrect Details" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="8.0">
               <children>
                  <Label text="Username" />
                  <Label text="First Name" />
                  <Label text="Last Name" />
                  <Label text="Phone Number" />
                  <Label text="House Number/Name" />
                  <Label text="Road Name" />
                  <Label text="City" />
                  <Label text="Postcode" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="154.0">
               <children>
                  <TextField fx:id="usernameTextBox" />
                  <TextField fx:id="firstNameTextBox" />
                  <TextField fx:id="lastNameTextBox" />
                  <TextField fx:id="phoneNumberTextBox" />
                  <TextField fx:id="houseNumberTextBox" />
                  <TextField fx:id="roadNameTextBox" />
                  <TextField fx:id="cityTextBox" />
                  <TextField fx:id="postcodeTextBox" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox fx:id="staffEditArea" prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <Label text="Employment Date" />
                  <Label text="Staff Number" />
               </children>
            </VBox>
            <VBox prefHeight="66.0" prefWidth="154.0">
               <children>
                  <TextField fx:id="employmentDateTextBox" promptText="dd/MM/yyyy" />
                  <TextField fx:id="staffNumberTextBox" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="switchAvatarButton" mnemonicParsing="false" onAction="#handleSwitchButton" text="Switch Draw Avatar/Choose Avatar" />
      <StackPane prefHeight="150.0" prefWidth="200.0">
         <children>
            <VBox fx:id="drawAvatarBox" prefHeight="200.0" prefWidth="100.0" />
            <HBox fx:id="defaultAvatarBox" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="image1Button" mnemonicParsing="false" onAction="#handleImage1SelectedButton" prefHeight="32.0" prefWidth="45.0">
                     <graphic>
                        <ImageView fx:id="image1" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
                  <Button fx:id="image2Button" mnemonicParsing="false" onAction="#handleImage2SelectedButton">
                     <graphic>
                        <ImageView fx:id="image2" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
                  <Button fx:id="image3Button" mnemonicParsing="false" onAction="#handleImage3SelectedButton">
                     <graphic>
                        <ImageView fx:id="image3" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
                  <Button fx:id="image4Button" mnemonicParsing="false" onAction="#handleImage4SelectedButton">
                     <graphic>
                        <ImageView fx:id="image4" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
                  <Button fx:id="image5Button" mnemonicParsing="false" onAction="#handleImage5SelectedButton">
                     <graphic>
                        <ImageView fx:id="image5" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
                  <Button fx:id="image6Button" mnemonicParsing="false" onAction="#handleImage6SelectedButton">
                     <graphic>
                        <ImageView fx:id="image6" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
                  <HBox prefHeight="100.0" prefWidth="200.0" />
               </children>
            </HBox>
         </children>
      </StackPane>
   </children>
</VBox>
