<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs230.application.MainPageController">
   <center>
      <ScrollPane prefHeight="323.0" prefWidth="488.0" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
         <content>
            <Label prefHeight="51.0" prefWidth="74.0" text="HomePage" />
         </content>
      </ScrollPane>
   </center>
   <left>
      <VBox prefHeight="200.0" prefWidth="75.0" styleClass="mainSideBox" BorderPane.alignment="CENTER">
         <children>
            <Hyperlink styleClass="mainSideLink" text="Dashboard" />
            <TreeView prefHeight="29.0" prefWidth="75.0" />
            <Hyperlink id="cs230.system.Fine" styleClass="mainSideLink" text="Fine">
               <font>
                  <Font size="20.0" />
               </font></Hyperlink>
         </children>
      </VBox>
   </left>
   <top>
      <HBox prefHeight="47.0" prefWidth="563.0" styleClass="mainTopBox" stylesheets="@application.css" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="51.0" prefWidth="82.0">
               <children>
                  <ImageView fitHeight="30.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true" />
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Username" />
                        <Label text="Balance" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <TextField>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TextField>
            <Button mnemonicParsing="false" text="Search" />
            <Button mnemonicParsing="false" onAction="#handleExit" text="Exit">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </top>
</BorderPane>
